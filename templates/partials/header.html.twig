<header class="custom-header py-2">
    <div class="container-fluid d-flex align-items-center">
        <a href="{{ path('app_main') }}" class="d-flex align-items-center text-decoration-none">
            <!-- Logo du site -->
            <img src="https://img.icons8.com/external-outline-lafs/64/external-bucket-cloud-storage-outline-lafs.png"
                 alt="Logo du site" class="me-2" style="height: 50px;">

            <!-- Nom du site -->
            <h1 class="fs-4 mb-0 text-dark">Bucket-List</h1>
        </a>

        <div class="ms-auto d-flex align-items-center">
            {% if app.user %}
                <span class="me-3 text-dark">{{ app.user.email }}</span>
                <a href="{{ path('app_logout') }}" class="btn btn-outline-danger">Logout</a>
            {% else %}
                <a href="{{ path('app_login') }}" class="btn btn-outline-primary">Login</a>
            {% endif %}
        </div>
    </div>
    <nav class="custom-header py-2">
        <div class="container-fluid">
            <a class="navbar-brand text-dark text-decoration-none fw-bold fs-6 ms-2"
               href="{{ path('app_main') }}">Home</a>
            <a class="navbar-brand text-dark text-decoration-none fw-bold fs-6 ms-2"
               href="{{ path('app_wish_list') }}">All wishes</a>
            {% if app.user %}
                <a class="navbar-brand text-dark text-decoration-none fw-bold fs-6 ms-2"
                   href="{{ path('app_wish_new') }}">New wish</a>
            {% endif %}
            <a class="navbar-brand text-dark text-decoration-none fw-bold fs-6 ms-2"
               href="{{ path('app_aboutus') }}">About us</a>
        </div>
    </nav>
</header>
