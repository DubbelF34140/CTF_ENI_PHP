{% extends 'base.html.twig' %}

{% block body %}
    {% if is_granted('ROLE_GOOD') %}
        <h1 class="display-4"><span class="hover-red">Axe</span> d'amélioration du site</h1>
    {% else %}
        <h1 class="display-4">Commentaire d'amélioration du site</h1>
    {% endif %}
    <p class="lead">Proposés par nos utilisateurs : </p>

    <ul class="list-group">
        {% for axe in axes %}
            <li class="list-group-item">{{ axe.description }}</li>
        {% endfor %}
    </ul>

    {% if is_granted('ROLE_USER') %}
        <a href="{{ path('app_axe_create') }}" class="btn btn-primary">Proposer un commentaire</a>
    {% endif %}

    {% if is_granted('ROLE_GOOD') %}
        <div class="card fixed-bottom-right">
            <div class="card-body text-center">
                <img src="https://media1.tenor.com/m/sazVZW05S-wAAAAd/genius-think-alike.gif" class="img-fluid rounded" alt="Genius Think Alike GIF">
            </div>
        </div>
    {% endif %}

{% endblock %}