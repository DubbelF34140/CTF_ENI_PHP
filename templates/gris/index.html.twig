{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="display-4 mb-4">Nuances de Gris :</h1>

    <div class="row">
        {% for gris in grislist %}
            <div class="col-md-4 mb-4">
                <div class="card d-flex flex-row align-items-center">
                    <div class="card-body">
                        <h5 class="card-title mb-0">{{ gris.nuance }}</h5>
                    </div>
                    <div class="p-3" style="background-color: {{ gris.nuance }}; width: 50px; height: 50px; margin: 10px"></div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
